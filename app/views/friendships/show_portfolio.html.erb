<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-chart-line me-2"></i><%= @friend.display_name %>'s Portfolio</h1>
        <%= link_to 'Back to Friends', my_friends_path, class: 'btn btn-secondary' %>
      </div>

      <% if @friend_stocks.any? %>
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-wallet me-2"></i>Portfolio Summary</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <p class="card-text"><strong>Portfolio Owner:</strong> <%= @friend.email %></p>
                <p class="card-text"><strong>Total Portfolio Value:</strong> 
                  <span class="text-success fs-5">$<%= number_with_precision(@total_value, precision: 2) %></span>
                </p>
              </div>
              <div class="col-md-6">
                <p class="card-text"><strong>Number of Stocks:</strong> <%= @friend_stocks.count %></p>
                <p class="card-text"><strong>Friend Since:</strong> 
                  <%= current_user.friendships.find_by(friend: @friend)&.created_at&.strftime("%B %d, %Y") %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i><%= @friend.display_name %>'s Stocks</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th><i class="fas fa-tag me-1"></i>Symbol</th>
                    <th><i class="fas fa-building me-1"></i>Company Name</th>
                    <th><i class="fas fa-dollar-sign me-1"></i>Price</th>
                    <th><i class="fas fa-calendar me-1"></i>Added Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% @friend_stocks.each do |stock| %>
                    <tr>
                      <td>
                        <span class="badge bg-primary fs-6"><%= stock.symbol %></span>
                      </td>
                      <td><%= stock.name %></td>
                      <td>
                        <% if stock.price %>
                          <span class="text-success fw-bold">$<%= number_with_precision(stock.price, precision: 2) %></span>
                        <% else %>
                          <span class="text-muted">N/A</span>
                        <% end %>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= stock.user_stocks.find_by(user: @friend)&.created_at&.strftime("%m/%d/%Y") %>
                        </small>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <% if @friend_stocks.count > 0 %>
          <div class="mt-4">
            <div class="card border-info">
              <div class="card-body text-center">
                <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Portfolio Insights</h6>
                <p class="card-text">
                  <strong><%= @friend.display_name %></strong> has been tracking 
                  <strong><%= @friend_stocks.count %></strong> 
                  <%= 'stock'.pluralize(@friend_stocks.count) %> with a total portfolio value of 
                  <strong class="text-success">$<%= number_with_precision(@total_value, precision: 2) %></strong>
                </p>
              </div>
            </div>
          </div>
        <% end %>

      <% else %>
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No Stocks in Portfolio</h4>
            <p class="text-muted">
              <%= @friend.display_name %> hasn't added any stocks to their portfolio yet.
            </p>
            <%= link_to 'Back to Friends', my_friends_path, class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .card-header.bg-primary {
    background-color: #0d6efd !important;
  }
  .table th {
    border-top: none;
  }
  .badge.fs-6 {
    font-size: 0.9rem !important;
  }
</style>
