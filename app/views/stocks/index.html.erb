<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Stock Portfolio</h1>
        <%= link_to 'Add New Stock', new_stock_path, class: 'btn btn-primary' %>
      </div>

      <% if @stocks.any? %>
        <div class="card mb-4">
          <div class="card-header">
            <h5 class="mb-0">Portfolio Summary</h5>
          </div>
          <div class="card-body">
            <p class="card-text">Total Portfolio Value: <strong>$<%= number_with_precision(@total_value, precision: 2) %></strong></p>
            <p class="card-text">Number of Stocks: <strong><%= @stocks.count %></strong></p>
          </div>
        </div>

        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Your Stocks</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Symbol</th>
                    <th>Company Name</th>
                    <th>Current Price</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @stocks.each do |stock| %>
                    <tr>
                      <td><strong><%= stock.symbol %></strong></td>
                      <td><%= stock.name %></td>
                      <td>$<%= number_with_precision(stock.price, precision: 2) %></td>
                      <td>
                        <%= link_to 'View', stock_path(stock), class: 'btn btn-sm btn-info' %>
                        <%= link_to 'Remove', stock_path(stock), method: :delete, 
                            data: { 
                              confirm: 'Are you sure you want to remove this stock from your portfolio?',
                              turbo_method: :delete 
                            }, 
                            class: 'btn btn-sm btn-danger' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <div class="card">
          <div class="card-body text-center">
            <h5 class="card-title">No Stocks in Portfolio</h5>
            <p class="card-text">You haven't added any stocks to your portfolio yet.</p>
            <%= link_to 'Add Your First Stock', new_stock_path, class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
