<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Add Stock to Portfolio</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @stock, local: true, class: "needs-validation", novalidate: true) do |form| %>
            <% if @stock.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h4>
                <ul class="mb-0">
                  <% @stock.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :symbol, class: "form-label" %>
              <%= form.text_field :symbol, class: "form-control", placeholder: "e.g., AAPL, GOOGL, TSLA", required: true %>
              <div class="form-text">Enter the stock symbol (ticker) you want to add to your portfolio.</div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <%= link_to 'Cancel', stocks_path, class: 'btn btn-secondary me-md-2' %>
              <%= form.submit "Add Stock", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Search Functionality -->
      <div class="card mt-4">
        <div class="card-header">
          <h5 class="mb-0">Search for Stocks</h5>
        </div>
        <div class="card-body">
          <%= form_with url: search_stocks_path, method: :get, local: true do |form| %>
            <div class="input-group">
              <%= form.text_field :search, placeholder: "Search for company name or symbol...", 
                  class: "form-control", value: params[:search] %>
              <button class="btn btn-outline-secondary" type="submit">Search</button>
            </div>
          <% end %>

          <% if defined?(@search_results) && @search_results.any? %>
            <div class="mt-3">
              <h6>Search Results:</h6>
              <div class="list-group">
                <% @search_results.first(10).each do |result| %>
                  <div class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                      <strong><%= result[:symbol] %></strong> - <%= result[:name] %>
                      <br><small class="text-muted"><%= result[:market] %> | <%= result[:type] %></small>
                    </div>
                    <%= link_to "Add", new_stock_path(symbol: result[:symbol]), class: "btn btn-sm btn-primary" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
