<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1>Search Stocks</h1>
      
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Find Stocks to Add to Your Portfolio</h5>
        </div>
        <div class="card-body">
       <%= render 'shared/search', url: search_stocks_path, method: :get, local: true, placeholder: "Search for company name or symbol (e.g., Apple, AAPL)...", button_text: "Search" %>

       <%= render 'stocks/results' %>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to 'Back to Portfolio', stocks_path, class: 'btn btn-secondary' %>
        <%= link_to 'Add Stock Manually', new_stock_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
